# Shopify Configuration
# Replace these with your actual Shopify credentials
SHOPIFY_SHOP_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_admin_api_access_token_here
SHOPIFY_API_VERSION=2025-01

# Database Configuration (Railway will provide these automatically)
DATABASE_URL=jdbc:postgresql://localhost:5432/shopify_data
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# Application Configuration
PORT=8080
SHOW_SQL=false

# Rate Limiting (adjust based on your Shopify plan)
# Basic: 100, Advanced: 200, Plus: 1000, Enterprise: 2000
SHOPIFY_MAX_POINTS=100
SHOPIFY_MAX_RETRIES=3
SHOPIFY_INITIAL_BACKOFF=1000
